<!--▼▼Header▼▼-->
<header id="sp-header" class="sp-header">
  <div class="header-inner">
    <!--▼▼Logo▼▼-->
    <div class="logo">
      <a href="#" class="logo__link"><%= image_tag "https://s3-ap-southeast-1.amazonaws.com/acbw/assets/acbw_mobile.svg", alt: "Logo", class: "logo__image" %></a>
    </div>
    <!--▲▲Logo▲▲-->
    <!--▼▼Navigation Menu▼▼-->
    <nav id="nav-menu" class="nav-menu">
      <a href="#" class="nav-menu__title nav-menu__title--first">About</a>
      <div id="nav-cat" class="nav-menu__category">
        <p class="nav-menu__title">Categories</p>
        <ul class="nav-ul">
          <li class="nav-ul__item"><a href="#" class="nav-ul__link">Tokyo Cycling Diary</a></li>
          <li class="nav-ul__item"><a href="#" class="nav-ul__link">Photo Walk</a></li>
          <li class="nav-ul__item"><a href="#" class="nav-ul__link">Life Update</a></li>
        </ul>
      </div>
    </nav>
    <!--▲▲Navigation Menu▲▲-->
  </div>

  <!--▼▼Hamburger Button▼▼-->
  <div id="ham-btn" class="ham-btn">
    <div id="ham-line" class="ham-line"></div>
  </div>
  <!--▲▲Hamburger Button▲▲-->
</header>
<!--▲▲Header▲▲-->

<!--▼▼Post Header▼▼-->
<div class="post-header">
  <div class="post-image">
    <%= image_tag "https://s3-ap-southeast-1.amazonaws.com/wpacbw/uploads/2016/12/s_IMG_20160903_143926-1.jpg", alt: "Header Image", class: "post-image__img lazyload" %>
  </div>
</div>
<!--▲▲Post Header▲▲-->

<!--▼▼Contents▼▼-->
<main class="post-wrap">
  <div class="post-wrap__inner">
    <h1 class="post-title"><span class="post-title__span"><%= @post.title %></span></h1>
    <div class="post-content">
      <%= @post.content.html_safe %>
    </div>
  </div>
</main>
<!--▲▲Contents▲▲-->

<!--▼▼Doodle▼▼-->
<div class="post-wrap">
  <div class="post-doodle">
    <%= image_tag "https://s3-ap-southeast-1.amazonaws.com/acbw/assets/doodles/tokyo-cycling-diary-doodle.png", alt: "doodle", class: "post-doodle__img" %>
  </div>
</div>
<!--▲▲Doodle▲▲-->

<!--▼▼Footer▼▼-->
<footer class="footer">
  <p class="footer__text">Keep on Rollin!</p>
</footer>
<!--▲▲Footer▲▲-->

<div id="btn-top" class="btn-top">
  <%= image_tag "https://s3-ap-southeast-1.amazonaws.com/acbw/assets/arrow-up.svg", alt: "To top button", class: "btn-top__img" %>
</div>
