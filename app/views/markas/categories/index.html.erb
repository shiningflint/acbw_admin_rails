<!--▼▼Content▼▼-->
<div class="content-wrap">
  <div class="sidenav-wrap">
    <%= render partial: "markas/common/adminnav" %>
  </div>

  <div class="main-wrap">
    <div class="block block_nocolor block_nopadding">
      <h1 class="title title_mb">Categories</h1>
      <% flash.each do |key, message| %>
        <div class="flash-notice"><%= message %></div>
      <% end %>
      <p><%= link_to "New Category", new_markas_category_path, class: "btn" %></p>
    </div>

    <div class="tablewrap">
      <table class="table">
        <thead class="table-head table-head_posts">
          <tr>
            <th>Category Name</th>
            <th>Controls</th>
          </tr>
        </thead>
        <tbody class="table-body">
          <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.category_name, edit_markas_category_path(category.id) %></td>
            <td><%= link_to "Edit", edit_markas_category_path(category.id), class: "btn" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!--▲▲Content▲▲-->
